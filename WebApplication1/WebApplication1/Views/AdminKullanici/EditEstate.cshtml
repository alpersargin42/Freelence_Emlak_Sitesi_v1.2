@model EntityLayer.Concrate.Estate

@{
    ViewData["Title"] = "EditEstate";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>İlan Düzenle</h1>
<br />
@using (Html.BeginForm("EditEstate", "AdminKullanici", FormMethod.Post))
{
    @Html.HiddenFor(x => x.EstateID)
    <div class="form-group">
        @Html.LabelFor(x => x.EstatePopu, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(x => x.EstatePopu, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">İlan Popülasyonunu Güncelle</button>
    </div>
}