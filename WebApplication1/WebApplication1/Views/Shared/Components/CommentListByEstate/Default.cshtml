@model IEnumerable<EntityLayer.Concrate.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <div class="media-body">
                    <h5 class="mt-0" style="color:red;"><u>•@item.CommentUserName</u></h5>
                    <h6 style="margin-left: 25px;"> >>@item.CommentContent</h6>
                </div>
            </div>
            <br />

        }
    }
    else
    {
        <p>
            Bu ilana henüz yorum yapılmadı. İlk Yorumu siz yapın...
        </p>
    }
</div>
<br/>
